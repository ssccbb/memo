<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.sung.note.memo.ui.index.AboutFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="20dp"
            android:text="记录点滴\n备忘时间"
            android:textSize="30sp"
            android:id="@+id/hint"
            android:textColor="@color/black_contant"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            app:z_depth_shape="rect"
            app:z_depth_padding="z_depth2"
            app:z_depth="z_depth2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/circlelayout_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/about"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:text="MEMO"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>
    </LinearLayout>
</RelativeLayout>
